{  
   "AWSTemplateFormatVersion":"2010-09-09",
   "Description":"BlueGreen ASG with Application LB",
   "Parameters":{  
      "Prefix":{  
         "Type":"String",
         "AllowedValues":[  
            "BLUE",
            "GREEN",
            "YELLOW"
         ],
         "Description":"If the last deployment was Blue, pick Green, and vice versa"
      },
      "InstanceCount":{  
         "Type":"Number",
         "Default":2,
         "Description":"Number of desired instances in Auto Scaling Group"
      },
      "AMI":{  
         "Type":"String",
         "Description":"ID of the AMI to spawn instances from."
      }
   },
   "Resources":{  
      "comTG":{  
         "Type":"AWS::ElasticLoadBalancingV2::TargetGroup",
         "Properties":{  
            "Name":{  
               "Fn::Join":[  
                  "-",
                  [  
                     {  
                        "Ref":"Prefix"
                     },
                     "Com"
                  ]
               ]
            },
            "HealthCheckIntervalSeconds":20,
            "HealthCheckPort":"traffic-port",
            "HealthCheckProtocol":"HTTP",
            "HealthCheckTimeoutSeconds":7,
            "HealthyThresholdCount":"3",
            "UnhealthyThresholdCount":"2",
            "HealthCheckPath":"/sitecore/service/healthcheck.aspx?testurl=www.chick-fil-a.com?noredirect=1",
            "Port":80,
            "Protocol":"HTTP",
            "TargetType":"instance",
            "VpcId":"vpc-93e9cdf7"
         }
      },
      "chickenWireTG":{  
         "Type":"AWS::ElasticLoadBalancingV2::TargetGroup",
         "Properties":{  
            "Name":{  
               "Fn::Join":[  
                  "-",
                  [  
                     {  
                        "Ref":"Prefix"
                     },
                     "ChickenWire"
                  ]
               ]
            },
            "HealthCheckIntervalSeconds":20,
            "HealthCheckPort":"traffic-port",
            "HealthCheckProtocol":"HTTP",
            "HealthCheckTimeoutSeconds":7,
            "HealthyThresholdCount":"3",
            "UnhealthyThresholdCount":"2",
            "HealthCheckPath":"/sitecore/service/healthcheck.aspx?testurl=thechickenwire.chick-fil-a.com?noredirect=1",
            "Port":80,
            "Protocol":"HTTP",
            "TargetType":"instance",
            "VpcId":"vpc-93e9cdf7"
         }
      },
      "cowzVrTG":{  
         "Type":"AWS::ElasticLoadBalancingV2::TargetGroup",
         "Properties":{  
            "Name":{  
               "Fn::Join":[  
                  "-",
                  [  
                     {  
                        "Ref":"Prefix"
                     },
                     "CowzVR"
                  ]
               ]
            },
            "HealthCheckIntervalSeconds":20,
            "HealthCheckPort":"traffic-port",
            "HealthCheckProtocol":"HTTP",
            "HealthCheckTimeoutSeconds":7,
            "HealthyThresholdCount":"3",
            "UnhealthyThresholdCount":"2",
            "HealthCheckPath":"/sitecore/service/healthcheck.aspx?testurl=cowzvr.com?noredirect=1",
            "Port":80,
            "Protocol":"HTTP",
            "TargetType":"instance",
            "VpcId":"vpc-93e9cdf7"
         }
      },
      "launchConfiguration":{  
         "Type":"AWS::AutoScaling::LaunchConfiguration",
         "Properties":{  
            "IamInstanceProfile":"arn:aws:iam::204364282870:instance-profile/ec2-default-role",
            "ImageId":{  
               "Ref":"AMI"
            },
            "InstanceType":"c4.xlarge",
            "KeyName":"CFA-AWS-Dev",
            "SecurityGroups":[  
               "sg-f2b76a8a"
            ],
            "UserData":{  
               "Fn::Base64":{  
                  "Fn::Join":[  
                     "\n",
                     [  
                        "<script>",
                        "powershell.exe C:\\Users\\Administrator\\Desktop\\DeployPackages\\RunWarmup.ps1",
                        "</script>",
                        "<persist>true</persist>"
                     ]
                  ]
               }
            }
         }
      },
      "autoScalingGroup":{  
         "Type":"AWS::AutoScaling::AutoScalingGroup",
         "UpdatePolicy":{
             "AutoScalingRollingUpdate":{
                 "SuspendProcesses":[
                      "ReplaceUnhealthy"
                 ]
             }
         },
         "Properties":{  
            "AutoScalingGroupName":{  
               "Ref":"Prefix"
            },
            "Cooldown":"30",
            "DesiredCapacity":{  
               "Ref":"InstanceCount"
            },
            "HealthCheckGracePeriod":"600",
            "HealthCheckType":"ELB",
            "LaunchConfigurationName":{  
               "Ref":"launchConfiguration"
            },
            "MaxSize":{  
               "Ref":"InstanceCount"
            },
            "MinSize":{  
               "Ref":"InstanceCount"
            },
            "VPCZoneIdentifier":[  
               "subnet-587ca072",
               "subnet-d9ac0d81"
            ],
            "TargetGroupARNs":[  
               {  
                  "Ref":"comTG"
               },
               {  
                  "Ref":"cowzVrTG"
               },
               {  
                  "Ref":"chickenWireTG"
               }
            ]
         }
      }
   }
}